.header-wrapper.flex.align-center.text-p
  .category-sidebar-header-row
    .row-content.flex-end.align-center
      .category-add.hover-border
        %span.category-add-loading.hide
          %i.fas.fa-spinner.fa-spin
        %span.category-add-icon
          %i.fas.fa-plus
        %span.project-add-content 新建分类
  .project-sidebar-header-row
    .row-content.flex-end.align-center
      .to-category-sidebar-link.hide
        %i{class: 'fas fa-bars'}
      .project-add.hover-border
        %span.project-add-loading.hide
          %i.fas.fa-spinner.fa-spin
        %span.project-add-icon
          %i.fas.fa-plus
        %span.project-add-content 新建项目
  .project-container-header-row
    .header-row-content.flex-between.align-center
      .to-project-sidebar-link.hide
        %span
          %i{class: 'fas fa-arrow-left'}
      .today-tomato
        %span 今日蕃茄🍅
        %span#today-tomato-num= current_user.today_tomato_size || 0
      .tomato-setting
        %span
          %i{class: 'fas fa-sliders-h'}
    .tomato-timer-content.hide.flex-between.align-center
      .now-doing
        %span 正在进行：
        %span.now-doing-content
      .timer-show
        %b 25:00
      .timer-cancel
        %i{class: 'fas fa-times'}
.container-fluid.flex
  = render 'category_sidebar'
  .project-sidebar.sidebar
    = render 'project_sidebar'
  .project-container
