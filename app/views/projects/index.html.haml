.header-wrapper.flex.align-center.text-p
  .category-sidebar-header-row
    .row-content.flex-end.align-center
      .category-add.hover-border
        %span.category-add-loading.hide
          %i.fas.fa-spinner.fa-spin
        %span.category-add-icon
          %i.fas.fa-plus
        %span.project-add-content 新建分类
  .project-sidebar-header-row
    .row-content.flex-end.align-center
      .to-category-sidebar-link.hide
        %i{class: 'fas fa-bars'}
      .project-add.hover-border
        %span.project-add-loading.hide
          %i.fas.fa-spinner.fa-spin
        %span.project-add-icon
          %i.fas.fa-plus
        %span.project-add-content 新建项目
  .project-container-header-row
    .header-row-content.flex-between.align-center
      .to-project-sidebar-link.hide
        %span
          %i{class: 'fas fa-arrow-left'}
      .today-tomato
        %span 今日蕃茄🍅
        - today_num = current_user.today_tomato_size
        %span#todayTomatoNum= today_num
      .take-break-button-group
        %a.btn.short-break.take-break{value: 5}
          %i.fas.fa-cookie-bite
        %a.btn.long-break.take-break{value: 15}
          <svg class="svg-inline--fa fa-coffee fa-w-20" aria-hidden="true" data-prefix="fas" data-icon="coffee" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 -40 640 512" data-fa-i2svg=""><path fill="currentColor" d="M192 384h192c53 0 96-43 96-96h32c70.6 0 128-57.4 128-128S582.6 32 512 32H120c-13.3 0-24 10.7-24 24v232c0 53 43 96 96 96zM512 96c35.3 0 64 28.7 64 64s-28.7 64-64 64h-32V96h32zm47.7 384H48.3c-47.6 0-61-64-36-64h583.3c25 0 11.8 64-35.9 64z"></path></svg>
        %input.tomato-time-input{type: 'hidden', value: 1}
      .tomato-setting
        %a.btn#tomatoSettingButton
          %i{class: 'fas fa-sliders-h'}
    .tomato-timer-content.timer-content.hide.flex-between.align-center
      .now-doing
        %span 正在进行：
        %span.now-doing-content
      .timer-show
        %b 25:00
      .tomato-timer-cancel
        %i{class: 'fas fa-times'}
    .break-timer-content.timer-content.hide.flex-between.align-center
      .take-break-sign
        %span 休息一下...
      .timer-show
        %b 25:00
      .break-timer-cancel
        %i{class: 'fas fa-times'}
.container-fluid.flex
  = render 'category_sidebar'
  .project-sidebar.sidebar
    = render 'project_sidebar'
  .project-container
.modal.fade#tomatoSettingModal
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title 蕃茄设置
        %button.close{type: 'button', 'data-dismiss': 'modal'}
          %span &times;
      .modal-body
        %form#tomatoSettingForm
          .tomato-setting-form-content
            .setting-row
              %label 蕃茄时间
              %select#tomatoTimeSelect
                - (1..60).each do |minute|
                  %option{value: minute, selected: minute == 1}= minute.to_s + ' 分钟'
            .setting-row
              %label 短休息时间
              %select#shortBreakTimeSelect
                - (1..60).each do |minute|
                  %option{value: minute, selected: minute == 5}= minute.to_s + ' 分钟'
            .setting-row
              %label 长休息时间
              %select#longBreakTimeSelect
                - (1..60).each do |minute|
                  %option{value: minute, selected: minute == 15}= minute.to_s + ' 分钟'
            %button.btn.btn-primary.btn-sm.btn-block.tomato-setting-save{type: 'submit'} 保存
.modal.fade#tomatoFinishModal
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title 你完成了一个蕃茄
        %button.close{'data-dismiss': 'modal'}
          %span &times;
      .modal-body
        %form#tomatoFinishForm
          %textarea{name: 'content', placeholder: '记录下本次蕃茄完成的内容，方便回顾。'}
          .form-group
            %input{type: 'checkbox', 'checked': true}
            %label 保存蕃茄后直接进入休息.
          .form-group
            %input{type: 'checkbox', 'checked': false}
            %label 标记任务为已完成.
          %input#todoIdInput{type: 'hidden'}
          %input#tomatoMinutesInput{type: 'hidden', name: 'minutes'}
          %button.btn.btn-primary.btn-sm.btn-block#saveTomatoButton{type: 'submit'} 保存蕃茄


