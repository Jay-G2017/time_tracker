.project-content#project-id{ value: project.id }
  .header
    %h3= project.name
  .project-body
    - project.titles.each do |title|
      = render 'shared/title_show', project: project, title: title

  .action-bar
    = button_tag '新建标题', { class: 'btn', id: 'new-title-button', url: new_project_title_path(project.id) }
    = button_tag '新建todo', { class: 'btn', id: 'new-todo-button', url: new_title_todo_path(project.titles.first.id), value: project.titles.first.id }
